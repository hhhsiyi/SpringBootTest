<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hewen.dao.UserDao">
    <!--    一个namespace绑定一个对应的Dao/Mapper接口，等同于原来的实现了一个接口-->
    <!--    命名空间十分重要，之前不重要，现在是用来绑定接口的，极其重要，其次如果mapper写在java里，需要配置maven静态资源过滤-->
    <select id="getUserList" resultType="com.hewen.pojo.User">
        select *
        from mybatis.user08
    </select>

    <select id="getUserById" parameterType="int" resultType="com.hewen.pojo.User">
        select *
        from mybatis.user08 t
        where id = #{id}
    </select>
    <!--传入对象中的属性可以直接取出来-->
    <insert id="addUser" parameterType="com.hewen.pojo.User">
        insert into mybatis.user08 (id, name, pwd)
        values (#{id}, #{name}, #{pwd})
    </insert>

    <update id="updateUser" parameterType="com.hewen.pojo.User">
        update mybatis.user08
        set name=#{name},
            pwd=#{pwd}
        where id = #{id}
    </update>

    <delete id="deleteUserById" parameterType="int">
        delete from mybatis.user08 where id = #{id}
    </delete>
</mapper>